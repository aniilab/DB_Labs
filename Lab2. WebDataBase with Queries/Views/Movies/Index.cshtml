@model IEnumerable<MovieBase.Movie>

@{
    ViewData["Title"] = "Список фільмів";
}

<h1>Фільми</h1>

<p>
    <a asp-action="Create">Додати фільм</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImdbRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProdYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Production)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImdbRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdYear)
            </td>
            <td>
                @Html.ActionLink(item.Production.Name, "Details", "Productions", routeValues: new {id = @item.ProductionId})
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Змінити</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Дізнатися більше</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
