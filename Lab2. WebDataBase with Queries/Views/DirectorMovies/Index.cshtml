@model IEnumerable<MovieBase.DirectorMovie>

@{
    ViewData["Title"] = "Фільми режисера"+ @ViewBag.CurrentDirector.Name;
}
 
<h1>Фільми режисера: </h1>
<h1>@ViewBag.CurrentDirector.Name</h1>
<form method="post" asp-controller="DirectorMovies" asp-action="Create" asp-route-currentDirectorId="@ViewBag.CurrentDirector.Id">
            <input type="submit" value="Додати фільм" />
        </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Movie.Name, "Details", "Movies", routeValues: new {id = @item.Movie.Id})
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
