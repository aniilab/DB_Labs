@model IEnumerable<MovieBase.ActorsInMovie>

@{
    ViewData["Title"] = "Cписок фільмів";
}

<h1>Фільми з актором: </h1>
<h1>@ViewBag.CurrentActor.Name</h1>
<form method="post" asp-controller="ActorsInMovies" asp-action="Create" asp-route-currentActorId="@ViewBag.CurrentActor.Id">
            <input type="submit" value="Додати фільм" />
        </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Movie.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
